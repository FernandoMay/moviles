<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="#fde8cd"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dificultad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Slot Machine"
        android:textColor="#025955"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="¡Pruebe suerte!"
        android:textColor="#00917c"
        android:textSize="30sp" />

    <TableRow
        android:layout_marginTop="24sp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/banana" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/cherry" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/uvas" />
    </TableRow>

    <TableRow android:gravity="center">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/gallofeliz" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/ballena" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/tortugasuerte" />
    </TableRow>

    <TableRow android:gravity="center">

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/ganesha" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/quetzalcoatl" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@drawable/manekineko" />
    </TableRow>

    <TableRow
        android:layout_marginTop="48sp"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16sp"
            android:background="@drawable/rounded_button"
            android:textColor="#fde8cd"
            android:text="Jugar">

        </Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="#fde8cd"
            android:text="Jugar">

        </Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:background="@drawable/rounded_button"
            android:textColor="#fde8cd"
            android:text="Jugar">

        </Button>
    </TableRow>

    <TableRow
        android:layout_marginTop="10sp"
        android:gravity="center">

        <Button
            android:id="@+id/button4"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16sp"
            android:background="@drawable/rounded_button"
            android:textColor="#fde8cd"
            android:text="Fácil">

        </Button>

        <Button
            android:id="@+id/button5"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="#fde8cd"
            android:text="Normal">

        </Button>

        <Button
            android:id="@+id/button6"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:background="@drawable/rounded_button"
            android:textColor="#fde8cd"
            android:text="Difícil">

        </Button>

    </TableRow>
</TableLayout>